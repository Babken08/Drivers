<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="87dp"
        android:text="4.5"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500"
        android:textSize="30sp"
        android:layout_alignBaseline="@+id/tv_distance"
        android:layout_alignBottom="@+id/tv_distance"
        android:layout_toStartOf="@+id/tv_date"
        android:layout_marginEnd="34dp" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="21:45/12.05"
        android:layout_marginEnd="28dp"
        android:layout_alignBaseline="@+id/tv_summary"
        android:layout_alignBottom="@+id/tv_summary"
        android:layout_alignParentEnd="true" />

</RelativeLayout>